<resources>

  <declare-styleable name="GravityImageView">
    <attr format="reference" name="gravityImageViewStyle"/>
    <attr name="imageGravity">
      <flag name="bottom"            value="1"/>
      <flag name="center_vertical"   value="2"/>
      <flag name="top"               value="4"/>
      <flag name="left"              value="8"/>
      <flag name="center_horizontal" value="16"/>
      <flag name="center"            value="18"/>
      <flag name="right"             value="32"/>
      <flag name="start"             value="64"/>
      <flag name="end"               value="128"/>
    </attr>
    <attr name="imageScaleMode">
      <enum name="none"              value="1"/>
      <enum name="inside"            value="2"/>
      <enum name="crop"              value="3"/>
    </attr>
  </declare-styleable>

</resources>
